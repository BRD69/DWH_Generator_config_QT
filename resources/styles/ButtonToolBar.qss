/* Кнопки панели инструментов */
QToolButton {
    border: none;
    padding: 5px;
    border-radius: 3px;
    min-width: 20px;
    min-height: 15px;
}

QToolButton:hover {
    background: rgba(0, 0, 0, 0.1);
}

QToolButton:pressed {
    background: rgba(0, 0, 0, 0.2);
}

QToolButton:disabled {
    background: rgba(0, 0, 0, 0.05);
}
